{
  "name": "mdn-macros-syntax",
  "displayName": "%displayName%",
  "version": "0.3.3",
  "publisher": "tristantheb",
  "description": "%description%",
  "keywords": [
    "MDN",
    "MDN Web Docs",
    "documentation",
    "macros",
    "markdown"
  ],
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "icon": "resources/mms-icon.png",
  "pricing": "Free",
  "activationEvents": [
    "workspaceContains:**/files/*/**/index.md"
  ],
  "engines": {
    "vscode": "^1.105.0"
  },
  "main": "./out/extension.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tristantheb/mdn-macros-syntax.git"
  },
  "bugs": {
    "url": "https://github.com/tristantheb/mdn-macros-syntax/issues/new?template=bug-report.md"
  },
  "homepage": "https://github.com/tristantheb/mdn-macros-syntax/blob/main/README.md",
  "contributes": {
    "grammars": [
      {
        "scopeName": "source.mdn-macros",
        "path": "./syntaxes/mdn-macros.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "mocha -r ts-node/register \"src/test/**/*.test.ts\" --exit",
    "test:ci": "mocha -r ts-node/register -r tsconfig-paths/register \"src/test/**/*.test.ts\" --reporter mocha-junit-reporter --reporter-options mochaFile=mocha-report.xml",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.106.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "chai": "^6.2.1",
    "eslint": "^9.39.1",
    "mocha": "^11.7.5",
    "mocha-junit-reporter": "^2.2.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslint": "^6.1.3",
    "typescript": "^5.9.3"
  }
}
